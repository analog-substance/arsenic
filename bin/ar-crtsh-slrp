#! /bin/bash
set -euo pipefail

DOMAIN=$1

curl -s 'https://crt.sh/?q=%25.'$DOMAIN \
 -H 'authority: crt.sh' \
 -H 'cache-control: max-age=0' \
 -H 'dnt: 1' \
 -H 'upgrade-insecure-requests: 1' \
 -H 'user-agent: Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/79.0.3945.117 Safari/537.36' \
 -H 'sec-fetch-user: ?1' \
 -H 'accept: text/html,application/xhtml+xml,application/xml;q=0.9,image/webp,image/apng,*/*;q=0.8,application/signed-exchange;v=b3;q=0.9' \
 -H 'sec-fetch-site: same-origin' \
 -H 'sec-fetch-mode: navigate' \
 -H 'referer: https://crt.sh/' \
 -H 'accept-encoding: gzip, deflate, br' \
 -H 'accept-language: en-US,en;q=0.9' --compressed \
 | grep "$DOMAIN" \
 | grep "TD" \
 | grep -v "outer" \
 | sed 's/\s*<\/\?TD>//g' \
 | sed 's/<BR>/\n/g' \
 | sed 's/^\*\.//g' \
 | sort -u
