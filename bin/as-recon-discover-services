#! /bin/bash

quick_scan() {
  nmap --privileged --stylesheet /static/nmap.xsl --open -Pn -T3 --host-timeout 30m -n --system-dns -p- $1 -oA recon/nmap-quick-tcp
}

accurate_punch(){
  echo "[+] scanning $1"
  ports=$(echo $(quick_scan $1 | grep open | cut -d/ -f1) | sed 's/ /,/g')
  if [[ -z "$ports" ]]; then
    echo "[+] $1: No open ports"
    return
  fi

  echo "[+] Version scanning $ports"

  nmap --privileged --stylesheet /static/nmap.xsl -Pn -oA recon/nmap-tcp --host-timeout 30m -n --system-dns -A -p$ports $1
}

try_punch(){
  base_dir="hosts/$ip"
  mkdir -p $base_dir/loot/passwords $base_dir/recon
  if ! compgen -G "hosts/$host/recon/nmap-*tcp*" > /dev/null 2>&1; then
    cd $base_dir
    accurate_punch $ip
    cd - 2>/dev/null
  else
    echo "[!] Skipping since it was already done"
  fi
}

fist_fight(){
  echo '[!] The fight is about to start ðŸ””'
  i=0
  for ip in `cat $1`; do
    i=$(( i + 1))
    try_punch &
    if [ $i -eq 3 ]; then
      while sleep 1; do
        i=$(jobs | wc -l)
        if [ $i -lt 3 ]; then
          break;
        fi
      done
    fi
  done
  wait
  echo '[!] The fist fight is over ðŸŽ‰'
}

if [ -z $1 ]; then
  # no longer using -A
  # echo Warning: This script is Aggressive
  echo "`basename $0` [ scope_file | target ]"
  exit
fi

if [ -f $1 ]; then
  # its a file, lets treat each line as a host
  fist_fight $1
else
  # not a file, treat it as a host
  accurate_punch $1
fi
