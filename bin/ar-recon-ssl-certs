#! /bin/bash

set -euo pipefail


function run {
  ar-get-cert-domains.sh $1 $2 || echo "fail"
}

nmap -p443,8443 -iL  scope-ips-public-ipv4.txt -oA recon/nmap-https-check-all-ipv4 --open
nmap -p443,8443 -iL  scope-ips-public-ipv6.txt -oA recon/nmap-https-check-all-ipv6 --open

cat recon/nmap-https-check-all-ip*.gnmap|grep Ports: | awk '{print $2,$5}' | cut -d/ -f1 | while read l; do
  host=$(echo $l | awk '{print $1}');
  port=$(echo $l | awk '{print $2}');
  run $host $port | sed 's/^/'$host:$port' /g'
done \
  | sed 's/\*\.//g' \
  | grep "\." \
  | ar-prune-blacklisted-domains \
  | sort -h | uniq > recon/ssl-cert-domains.txt
cat recon/ssl-cert-domains.txt | grep -v " fail" | awk '{print $NF}' | sort -h | uniq | tee scope-domains-ssl-certs.txt

grep " fail" recon/ssl-cert-domains.txt
